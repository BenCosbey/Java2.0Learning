let pokemonRepository=function(){let d=[];function a(a){d.push(a)}function b(){return d}function e(a){return a.charAt(0).toUpperCase()+a.slice(1).toLowerCase()}function c(a){return fetch(a.detailsUrl).then(function(a){return a.json()}).then(function(b){a.imageUrl=b.sprites.front_default,a.height=b.height,a.types=[],b.types.forEach(b=>{a.types.push(` <span>${e(b.type.name)}</span>`)}),a.abilities=[],b.abilities.forEach(b=>{a.abilities.push(` <span>${e(b.ability.name)}</span>`)})}).catch(function(a){console.error(a)})}return{add:a,getAll:b,addListItem:function(d){let f=document.querySelector("ul"),b=document.createElement("li"),a=document.createElement("button");$(a).text(e(d.name)),$(a).addClass("btn btn-outline-danger btn-width group-list-item"),$(a).attr({"data-toggle":"modal","data-target":"#poke-modal"}),b.append(a),a.addEventListener("click",function(){(function(a){c(a).then(function(){let g=$(".modal-title"),h=$(".modal-body"),b=$(".col__left"),c=$(".col__right"),d=$(".modal__row");$(g).empty(),$(h).empty(),$(b).empty(),$(c).empty(),$(d).empty();let i=$("<h1>"+e(a.name)+"</h1>"),j=$("<div><p>Height: "+a.height+"</p></div>"),k=$("<div><p>Type(s): "+a.types+"</p></div>"),l=$("<div><p>Abilities: "+a.abilities+"</p></div>"),f=$('<img class="modal-img">');f.attr("src",a.imageUrl),f.attr("id","modal-image"),g.append(i),b.append(j,k,l),c.append(f),d.append(b,c),h.append(d)})})(d)}),f.append(b)},loadList:function(){return fetch("https://pokeapi.co/api/v2/pokemon/?limit=150").then(function(a){return a.json()}).then(function(b){b.results.forEach(function(b){a({name:b.name,detailsUrl:b.url})})}).catch(function(a){console.error(a)})},loadDetails:c}}();pokemonRepository.loadList().then(function(){pokemonRepository.getAll().forEach(function(a){pokemonRepository.addListItem(a)})})